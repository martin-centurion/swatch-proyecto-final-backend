<header class="header container">
        <h1 class="header__logo">Swatch</h1>
        <nav class="nav-menu">
            <button class="open-menu" id="open-menu"><i class="bi bi-list"></i></button>
            <ul id="nav-list" class="nav-list">
                <button class="close-menu" id="close-menu"><i class="bi bi-x-lg"></i></button>
                <li class="nav-item"><a class="nav-link" href="/products">Productos</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Nosotros</a></li>
            </ul>    
        </nav>
        <nav class="nav-icon">
              <li class="nav-item"><a href="/register"><i class="bi bi-person"></i></a></li>
              <li class="nav-item"><a href="/logout"><i class="bi bi-person-dash"></i></a></li>
              <li class="nav-item"><a href="/carts"><i class="bi bi-bag"></i></a></li>
        </nav>
    </header>
    <main>
        <section class="banner">
            <div class="container">
            </div>
        </section>
        <section class="container">
            <div class="productos__content container">
                <div class="productos__content-title">
                    <h2>Carrito</h2>
                </div>
            </div>

            <div>
                <div class="productos-img">
                  {{#each payload}}
                        <article>
                            <p>Code: {{this.product}}</p>
                            <p>Quantity: {{this.quantity}}</p>
                            <a  class="deleteButton" data-cid='{{../cartId}}' data-pid='{{this.product}}'><svg xmlns="http://www.w3.org/2000/svg" width="29" height="29" viewBox="2 2 20 20" fill="none" stroke="#d87093" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a>
                        </article>
                  {{/each}}  
                </div>
            </div>

            <div>
            <div>
            </div>
                <form action="/carts/{{cartId}}/purchase" method="POST">
                    <button type="submit">Finalizar Compra</button>
                </form>

            </div>
            
        </section>
    </main>
    <footer class="footer">
    </footer>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/cart.js">